			label.col-sm-3.col-form-label.col-form-label-sm Company Name
			.col-sm-9
				input.form-control#company-name-tf(type='text', name='company_name', value= user.company_name)

		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Address
			.col-sm-9
				input.form-control#address-tf(type='address', name='adress', value= user.adress)

