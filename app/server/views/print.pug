
extends layout

block content

	include header.pug
	include modals/alert
	include modals/confirm
	
	div.container(style='margin:20px auto')
		table.table.table-bordered.table-striped
			thead.thead-dark
				tr
					th(style='width:50px;text-align:center') #
					th(style='width:220px') Name
					th(style='width:220px') Username
					th(style='width:240px') Location
					th Account Created
			tbody
			- for (var i = 0; i < accts.length; i++)
				tr
					td(style='text-align:center')= i+1
					td= accts[i].name
					td= accts[i].user
					td= accts[i].country
					td= accts[i].date
	
	block scripts
	//script(src='/js/controllers/printController.js')
	script(src='/js/controllers/settingsController.js')
	script(src='/js/form-validators/accountValidator.js')
